{
  "name": "@lffg/luizfelipe.dev",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "serve": "gatsby serve",
    "start": "yarn develop",
    "dev": "gatsby develop",
    "format:raw": "prettier --write --ignore-path .eslintignore",
    "format": "yarn format:raw '**/*.{json,vue,css,scss,less,graphql,gql,md,mdx,yml,yaml}' && yarn lint:fix",
    "lint": "yarn lint:raw .",
    "lint:fix": "yarn lint:raw --fix .",
    "lint:raw": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings=0 --ignore-pattern '!.*.*'"
  },
  "dependencies": {
    "gatsby": "^2.20.16",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-react-helmet": "^3.2.1",
    "gatsby-plugin-sass": "^2.2.1",
    "gatsby-plugin-typescript": "^2.3.1",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-helmet": "^5.0.15",
    "eslint": "^6.8.0",
    "eslint-config-lffg": "^18.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript-plugin-css-modules": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,vue,css,scss,less,graphql,gql,md,mdx,yml,yaml}": [
      "yarn format:raw"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:raw --fix"
    ]
  }
}
