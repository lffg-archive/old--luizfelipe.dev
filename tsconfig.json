{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "build/dist",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "dashesOnly"
        }
      }
    ]
  },
  "exclude": ["node_modules", ".cache", "public", "build", "dist"]
}
