{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "build/dist",
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true
  },
  "exclude": ["node_modules", "scripts", ".cache", "public", "build", "dist"]
}
