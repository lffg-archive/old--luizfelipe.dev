{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "outDir": "build/ts",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": false,
    "strict": true
  },
  "exclude": ["node_modules", ".cache", "public", "build"]
}
